<%- include("./layouts/header"); -%>

<% if(success[0]||error[0]){ %>
    <main class="container mt-3">
        <%- include("./layouts/flash"); -%>
    </main>
    <% } %>

<h1 class="text-center">Linkedin</h1>
   <div class="sign-in">
    <div class="sign">
    <h2 >Sign in</h2>
    <p>Stay updated on your professional world</p>
    </div>
    <div class="form">
        <div class="form-group mb-4">
        <input type="email" class="form-control" name="email" id="email" placeholder="Email or phone">
        </div>
        <div class="form-group mb-4 mt-4">
        <input type="password" class="form-control" name="password" id="password" placeholder="password">
        </div>

        <!-- <p class="forgot">Forgot password?</p> -->
        <button class="btn btn-primary button-style mt-3"
        type="submit">Sign in</button>
        

       
    </div>
        
   </div>

   <p class="text-center">New to LinkedIn?<a style="text-decoration: none;" href="/register">Join now</a></p>

<%- include("./layouts/footer"); -%>