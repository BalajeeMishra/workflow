<%- include("./layouts/header"); -%>
<%- include("./layouts/navbar"); -%>
<% if(success[0]||error[0]){ %>
    <main class="container mt-3">
        <%- include("./layouts/flash"); -%>
    </main>
    <% } %>
<div>
    <h3 class=" text-center mt-3">Add More Information<h3>
</div>
  <div class="card" style="width: 35%; margin: auto; background-color: lightyellow;">
    <div class="card-body">
      <form method="post" action="/registered" enctype="multipart/form-data" class="needs-validation" nonvalidate>
        <div class="mb-3">
          <label for="" class="form-label"
            >Age</label
          >
          <input
            type="text"
            name="age"
            class="form-control"
            
            placeholder="age"
            required
          >
        </div>
        <div class="mb-3">
          <label for="compny" class="form-label"
            >Company</label
          >
          <input
            type="text"
            name="compny"
            class="form-control"
            placeholder="company-name"
            required
          >
        </div>


        <div class="mb-3">
            <label for="logo">Profile pic</label>
            <input type="file" class="form-control" name="logo" id="img">
        </div>

        <button type="submit" class="btn btn-primary button-style">join us</button>
      </form>
    </div>
  </div>
  <script>
    (function () {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
<%- include("./layouts/footer"); -%>